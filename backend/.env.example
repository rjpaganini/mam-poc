# Environment Configuration
FLASK_ENV=development
FLASK_APP=backend.app:create_app

# Media Base Path (REQUIRED)
MEDIA_BASE_PATH=/path/to/your/media/files

# API Configuration
API_HOST=127.0.0.1
API_PORT=5001

# Media Size Limits (in bytes)
MAX_VIDEO_SIZE=10737418240  # 10GB
MAX_IMAGE_SIZE=1073741824   # 1GB

# Memory Monitoring
MEMORY_WARNING_THRESHOLD=75.0   # Percentage to trigger warning
MEMORY_CRITICAL_THRESHOLD=90.0  # Percentage to trigger critical actions
MEMORY_CHECK_INTERVAL=60        # Check interval in seconds

# WebSocket Configuration
WEBSOCKET_PING_INTERVAL=25      # Ping interval in seconds
WEBSOCKET_PING_TIMEOUT=10       # Ping timeout in seconds
WEBSOCKET_MAX_MESSAGE_SIZE=1048576  # Max message size in bytes (1MB)

# Database Configuration
SQLALCHEMY_DATABASE_URI=sqlite:///data/mam.db
SQLALCHEMY_TRACK_MODIFICATIONS=false

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Processing Configuration
BATCH_SIZE=10
PROCESSING_THREADS=4

# Cache Configuration
CACHE_TYPE=simple
CACHE_TTL=300  # Cache TTL in seconds

# Frontend Configuration
FRONTEND_PORT=3001

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
